{
    "name": "vscode-custom-theme",
    "displayName": "vscode-custom-theme",
    "description": "Customize your vscode experience",
    "version": "1.0.0",
    "publisher": "bentx",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:theme.apply",
        "onCommand:theme.reset"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "theme.apply",
                "title": "Custom theme : Apply"
            },
            {
                "command": "theme.reset",
                "title": "Custom theme : Reset"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Custom theme configuration",
            "properties": {
                "theme.activitybar.background.color": {
                    "type": "string",
                    "default": "#333",
                    "description": "The activity bar background color."
                },
                "theme.filetree.background.color": {
                    "type": "string",
                    "default": "#252526",
                    "description": "The file tree background color."
                },
                "theme.tabs.background.color": {
                    "type": "string",
                    "default": "#252526",
                    "description": "The tabs background color (inactive only, active one inherits from your theme)."
                },
                "theme.tabs.border.color": {
                    "type": "string",
                    "default": "#252526",
                    "description": "The tabs border color."
                },
                "theme.tabs.toolbox.background.color": {
                    "type": "string",
                    "default": "#252526",
                    "description": "The tabs toolbox background color (top right bar)."
                },
                "theme.statusbar.background.color": {
                    "type": "string",
                    "default": "#007acc",
                    "description": "The status bar background color."
                },
                "theme.statusbar.text.color": {
                    "type": "string",
                    "default": "#fff",
                    "description": "The status bar text color."
                },
                "theme.smiley.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display or hide the status bar smiley face."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}